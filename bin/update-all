#!/usr/bin/env sh

#    Updated: 2017/11/05 18:24:36 by bricewge         ###   ########.fr        #

if [[ $OS == "archlinux" ]]; then
    pacaur -Suy # Archlinux. TODO .pacsave .bak .pacnew ...
elif [[ $OS == "nixos" ]]; then
    sudo nixos-rebuild --no-build-hook switch --upgrade
fi

zplug update # ZSH

# Emacs. TODO Quelpa packages get marked as faild by
# auto-package-update, they should been updated by him
emacsclient --eval "(progn                       \
                      (auto-package-update-now)  \
                      (quelpa-self-upgrade)      \
                      (quelpa-upgrade))"
