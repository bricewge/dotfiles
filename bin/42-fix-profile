#!/bin/bash

set -e

app_support=$HOME/Library/Application\ Support/

if [ -L "$app_support" ]; then
    rm -R "$app_support"
    mv "$app_support.42_cache_bak" \
       "$app_support"
fi

profile=`ls -1 "$app_support/Firefox/Profiles"`
sed -i ".bak" "s|\(Path=Profiles/\).*|\1$profile|" "$app_support/Firefox/profiles.ini"
