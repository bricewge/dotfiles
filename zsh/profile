# Executed by all login shells.
# Put all environement variables in it.
# * Path
PATH="$HOME/.local/bin:$HOME/.config/bspwm/panel:$PATH"
PATH="$(ruby -e 'puts Gem.user_dir')/bin:$PATH"
export PATH

# * Language
# Set default language
LANG=fr_FR.utf8
LC_CTYPE="fr_FR.UTF-8"
LC_NUMERIC="fr_FR.UTF-8"
LC_TIME="fr_FR.UTF-8"
LC_COLLATE="fr_FR.UTF-8"
LC_MONETARY="fr_FR.UTF-8"
LC_MESSAGES="fr_FR.UTF-8"
LC_PAPER="fr_FR.UTF-8"
LC_NAME="fr_FR.UTF-8"
LC_ADDRESS="fr_FR.UTF-8"
LC_TELEPHONE="fr_FR.UTF-8"
LC_MEASUREMENT="fr_FR.UTF-8"
LC_IDENTIFICATION="fr_FR.UTF-8"
# Set language preferences
LANGUAGE="fr_FR:en_US:en"

# Export it all!
export LANG LANGUAGE LC_CTYPE LC_NUMERIC LC_TIME LC_COLLATE LC_MONETARY \
LC_MESSAGES LC_PAPER LC_NAME LC_ADDRESS LC_TELEPHONE LC_MEASUREMENT \
LC_IDENTIFICATION

# * Editor
# Set Emacs as the default editor.
EDITOR="emacsclient -t"
VISUAL="emacs -nw"
export EDITOR VISUAL

# * systemd
# Needed to run Xorg as a systemd service
# https://wiki.archlinux.org/index.php/Systemd/User#Xorg_as_a_systemd_user_service
systemctl --user set-environment XDG_VTNR=1

# # * ssh-agent and gpg-agent
# # Use the gpg-agent from envoy
# envoy ssh-rsa  cardno:000603362679
# source <(envoy -p)
